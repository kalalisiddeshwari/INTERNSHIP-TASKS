<script>
/*! ====== DATA (single source of truth) ====== */
const PRODUCTS=[ // images are inline SVGs (no HTTP fetch)
  {id:"p1",name:"Aurora Headphones",cat:"electronics",price:79.99,rating:4.6,img:"#A77"},
  {id:"p2",name:"Nimbus Keyboard",cat:"electronics",price:59.5,rating:4.4,img:"#7A7"},
  {id:"p3",name:"Cloud Tee",cat:"apparel",price:18.0,rating:4.2,img:"#77A"},
  {id:"p4",name:"Breeze Hoodie",cat:"apparel",price:42.0,rating:4.5,img:"#AA7"},
  {id:"p5",name:"Ceramic Mug",cat:"home",price:12.99,rating:4.1,img:"#A7A"},
  {id:"p6",name:"Desk Lamp",cat:"home",price:24.5,rating:4.3,img:"#7AA"},
  {id:"p7",name:"Pocket Speaker",cat:"electronics",price:35.0,rating:4.0,img:"#A55"},
  {id:"p8",name:"Canvas Tote",cat:"apparel",price:15.0,rating:4.1,img:"#5A5"},
  {id:"p9",name:"Throw Pillow",cat:"home",price:19.25,rating:4.4,img:"#55A"},
  {id:"p10",name:"Trail Watch",cat:"electronics",price:99.0,rating:4.7,img:"#5AA"},
  {id:"p11",name:"Luma Monitor 24\"",cat:"electronics",price:149.0,rating:4.5,img:"#AA5"},
  {id:"p12",name:"Soft Blanket",cat:"home",price:28.0,rating:4.6,img:"#5AA"}
];
const BLOG=[{title:"Performance First: Ship Fast UIs",t:"Minimize requests, inline critical CSS, lazy load media, and defer non-critical JS to deliver first paint quickly."},
            {title:"Mobile-First Grid Layouts",t:"Design for small screens first, then enhance with CSS grid breakpoints for tablets and desktops."},
            {title:"LocalStorage Patterns",t:"Keep a single key for your cart or settings, and always guard against JSON parsing errors."}];
/*! ====== STATE ====== */
const state={
  route:"home",
  cart:loadCart(),
  page:1,perPage:8, // pagination
  search:"",cat:"all",sort:"featured"
};
/*! ====== UTIL ====== */
function $(sel,root=document){return root.querySelector(sel)}
function $all(sel,root=document){return [...root.querySelectorAll(sel)]}
function money(n){return "$"+n.toFixed(2)}
function svgPlaceholder(hex="#777"){ // tiny inline SVG as data URI
  const svg=`<svg xmlns='http://www.w3.org/2000/svg' width='800' height='600'><rect width='100%' height='100%' fill='${hex}'/><text x='50%' y='50%' dominant-baseline='middle' text-anchor='middle' font-family='system-ui' font-size='42' fill='white'>Image</text></svg>`;
  return "data:image/svg+xml;utf8,"+encodeURIComponent(svg);
}
/*! ====== ROUTER (hash-less tabs) ====== */
function route(name){
  state.route=name;
  $all("main>section").forEach(s=>s.classList.remove("active"));
  $("#"+name).classList.add("active");
  // update tabs aria-current
  $all(".tab").forEach(b=>b.setAttribute("aria-current", b.getAttribute("aria-controls")===name ? "page" : "false"));
  // focus management
  $("#"+name).setAttribute("tabindex","-1"); $("#"+name).focus({preventScroll:true});
  if(name==="cart") renderCart();
  if(name==="shop") { renderProducts(); }
  history.replaceState(null,"","#"+name); // deep-link
}
window.addEventListener("load",()=>{const h=location.hash.slice(1); if(["home","shop","cart","blog","contact"].includes(h)) route(h); $("#year").textContent=new Date().getFullYear(); renderProducts(); renderPosts(); updateCartCount();});
window.addEventListener("hashchange",()=>{const h=location.hash.slice(1); if(h) route(h);});
/*! ====== SHOP RENDER ====== */
function readControls(){
  state.search=$("#q").value.trim().toLowerCase();
  state.cat=$("#cat").value;
  state.sort=$("#sort").value;
}
function sortBy(arr,mode){
  if(mode==="priceAsc") return arr.sort((a,b)=>a.price-b.price);
  if(mode==="priceDesc")return arr.sort((a,b)=>b.price-a.price);
  if(mode==="ratingDesc")return arr.sort((a,b)=>b.rating-a.rating);
  return arr; // featured
}
function paginate(arr,page,per){const start=(page-1)*per; return arr.slice(start,start+per)}
function renderProducts(){
  readControls();
  let items=PRODUCTS.filter(p=>{
    const matchesQ=state.search? (p.name.toLowerCase().includes(state.search) || p.cat.includes(state.search)):true;
    const matchesC=state.cat==="all"||p.cat===state.cat;
    return matchesQ && matchesC;
  });
  items=sortBy(items,state.sort);
  const total=items.length, pages=Math.max(1,Math.ceil(total/state.perPage));
  if(state.page>pages) state.page=1;
  const pageItems=paginate(items,state.page,state.perPage);
  const list=$("#products"); list.innerHTML="";
  pageItems.forEach(p=>{
    const card=document.createElement("article"); card.className="card product";
    card.innerHTML=`
      <img class="lazy" alt="${p.name}" width="800" height="600" loading="lazy" data-src="${svgPlaceholder(p.img)}">
      <div class="pad">
        <h3 style="margin:0 0 4px 0">${p.name}</h3>
        <div class="meta"><span class="price">${money(p.price)}</span><span class="rating">‚≠ê ${p.rating.toFixed(1)}</span></div>
        <div class="chips"><span class="chip">${p.cat}</span></div>
        <div class="actions" style="margin-top:8px">
          <button class="btn small" onclick="addToCart('${p.id}')">Add to Cart</button>
          <button class="btn alt small" onclick="quickView('${p.id}')">Details</button>
        </div>
      </div>`;
    list.appendChild(card);
  });
  renderPager(pages);
  lazyLoadImages();
}
function renderPager(pages){
  const pager=$("#pager"); pager.innerHTML="";
  if(pages<=1){pager.classList.add("hide");return;} else pager.classList.remove("hide");
  const prev=document.createElement("button"); prev.className="tab"; prev.textContent="‚Äπ Prev"; prev.disabled=state.page===1; prev.onclick=()=>{state.page--; renderProducts()};
  const next=document.createElement("button"); next.className="tab"; next.textContent="Next ‚Ä∫"; next.disabled=state.page===pages; next.onclick=()=>{state.page++; renderProducts()};
  const info=document.createElement("span"); info.className="badge"; info.textContent=`Page ${state.page} / ${pages}`;
  pager.append(prev,info,next);
}
function quickView(id){
  const p=PRODUCTS.find(x=>x.id===id);
  if(!p) return;
  alert(`${p.name}\nCategory: ${p.cat}\nPrice: ${money(p.price)}\nRating: ${p.rating.toFixed(1)}\n\n(Modal-free demo)`);
}
/*! ====== LAZY IMAGES ====== */
function lazyLoadImages(){
  const imgs=$all("img.lazy");
  if("IntersectionObserver" in window){
    const io=new IntersectionObserver((entries,obs)=>{
      entries.forEach(e=>{
        if(e.isIntersecting){
          const img=e.target; img.src=img.dataset.src; img.classList.remove("lazy"); obs.unobserve(img);
        }
      });
    },{rootMargin:"200px 0px"});
    imgs.forEach(i=>io.observe(i));
  }else{ // fallback
    imgs.forEach(img=>{img.src=img.dataset.src; img.classList.remove("lazy");});
  }
}
/*! ====== CART ====== */
function loadCart(){try{return JSON.parse(localStorage.getItem("capstone_cart"))||{}}catch{return {}}}
function saveCart(){localStorage.setItem("capstone_cart",JSON.stringify(state.cart)); updateCartCount();}
function addToCart(id){
  state.cart[id]=(state.cart[id]||0)+1; saveCart();
  // toast (no reflow-heavy)
  const t=document.createElement("div"); t.textContent="Added to cart"; Object.assign(t.style,{position:"fixed",inset:"auto 16px 16px auto",background:"#111826",color:"#fff",padding:"8px 12px",border:"1px solid #2a2d3a",borderRadius:"10px",zIndex:9999,opacity:"0.97"});
  document.body.appendChild(t); setTimeout(()=>t.remove(),900);
}
function removeFromCart(id){delete state.cart[id]; saveCart(); renderCart();}
function setQty(id,qty){
  const q=Math.max(1,Math.min(99,parseInt(qty||"1",10))); state.cart[id]=q; saveCart(); renderCart();
}
function updateCartCount(){
  const count=Object.values(state.cart).reduce((a,b)=>a+b,0);
  $("#cartCount").textContent=count;
}
function renderCart(){
  const box=$("#cartList"); box.innerHTML="";
  const items=Object.entries(state.cart); if(!items.length){box.innerHTML='<p class="small" style="color:var(--sub)">Your cart is empty.</p>'; $("#cartTotal").textContent=money(0); return;}
  let total=0;
  items.forEach(([id,qty])=>{
    const p=PRODUCTS.find(x=>x.id===id); if(!p) return;
    const row=document.createElement("div"); row.className="card pad";
    total+=p.price*qty;
    row.innerHTML=`
      <div class="cart-row">
        <img alt="${p.name}" width="64" height="64" src="${svgPlaceholder(p.img)}">
        <div><strong>${p.name}</strong><div class="small" style="color:var(--sub)">${p.cat} ‚Ä¢ ‚≠ê ${p.rating.toFixed(1)}</div></div>
        <div class="qty" aria-label="Quantity">
          <button aria-label="Decrease" onclick="setQty('${id}', (${qty}-1))">‚àí</button>
          <input inputmode="numeric" value="${qty}" onchange="setQty('${id}', this.value)">
          <button aria-label="Increase" onclick="setQty('${id}', (${qty}+1))">+</button>
        </div>
        <div style="text-align:right">
          <div>${money(p.price*qty)}</div>
          <button class="tab small" onclick="removeFromCart('${id}')">Remove</button>
        </div>
      </div>`;
    box.appendChild(row);
  });
  $("#cartTotal").textContent=money(total);
}
function checkout(){alert("This is a front-end demo. Hook this up to a backend/payment API in production.");}
/*! ====== BLOG ====== */
function renderPosts(){
  const wrap=$("#posts"); wrap.innerHTML="";
  BLOG.forEach((b,i)=>{
    const c=document.createElement("article"); c.className="card post";
    c.innerHTML=`<div class="pad"><h3>${b.title}</h3><p class="small" style="color:var(--sub)">Post #${i+1}</p><p>${b.t}</p></div>`;
    wrap.appendChild(c);
  });
}
/*! ====== PERF TWEAKS ====== */
// Idle pre-render some routes
if("requestIdleCallback" in window){
  requestIdleCallback(()=>{ if(state.route!=="cart") renderCart(); if(state.route!=="blog") renderPosts(); },{timeout:1200});
}else{ setTimeout(()=>{ if(state.route!=="cart") renderCart(); if(state.route!=="blog") renderPosts(); },800); }
// Keep CPU cool on input (very cheap debounce)
let tId; ["q","cat","sort"].forEach(id=>{
  const el=()=>document.getElementById(id);
  (el()?.oninput = el()?.onchange = function(){ clearTimeout(tId); tId=setTimeout(renderProducts,90); });
});
</script>
</body></html>
